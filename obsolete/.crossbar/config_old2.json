{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080,
                        "interface": "0.0.0.0"
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "/srv/http/"
                        },
                        "ws": {
                            "type": "websocket",
                            "options": {
                                "compression": {
                                    "enabled": true
                                },
                                "max_message_size": 1048576,
                                "max_frame_size": 65536
                            }
                        }
                    }
                }
            ]
        }
    ]
}
